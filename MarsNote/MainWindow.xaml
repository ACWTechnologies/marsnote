                        <GradientStop Color="#FFFFFFFF" Offset="0.01" />
                        <GradientStop Color="#FFFFFFFF" Offset="1" />
                    </LinearGradientBrush>
                </RichTextBox.Background>
            </xctk:RichTextBox>
